# Server Configuration
NODE_ENV=development
PORT=4000
API_VERSION=v1

# Database - PostgreSQL
DB_HOST=localhost
DB_PORT=54320
DB_NAME=kraya
DB_USER=postgres
DB_PASSWORD=postgres

# Database - MongoDB
MONGO_URI=mongodb://localhost:27017/kraya

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=kraya-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=kraya-refresh-secret-key-change-in-production
JWT_REFRESH_EXPIRES_IN=30d

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=2000

# WhatsApp API Configuration (WATI)
WHATSAPP_API_BASE_URL=https://live-mt-server.wati.io
WHATSAPP_API_KEY=your-wati-api-key-here
WHATSAPP_WEBHOOK_SECRET=your-webhook-secret

# N8N Webhook Configuration
N8N_WEBHOOK_BASE_URL=http://localhost:5678/webhook
N8N_WEBHOOK_SECRET=kraya-n8n-webhook-secret-2024

# Encryption
ENCRYPTION_KEY=kraya-aes-256-encryption-key-32-chars-min

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Multi-tenancy
DEFAULT_TENANT_ID=demo-tenant

# AI Configuration
AI_CONFIDENCE_THRESHOLD=0.7
AI_LEAD_SCORE_THRESHOLD=6

# Workflow Engine
WORKFLOW_MAX_RETRIES=5
WORKFLOW_RETRY_DELAY=5000

# Analytics
ANALYTICS_RETENTION_DAYS=90

# Security
MFA_ENABLED=true
SESSION_TIMEOUT=3600000
PASSWORD_MIN_LENGTH=8

# Compliance
GDPR_ENABLED=true
DATA_RETENTION_DAYS=365
